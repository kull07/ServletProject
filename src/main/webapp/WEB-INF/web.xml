<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.mainservlet.controller.login.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>com.mainservlet.controller.login.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/RegistrationController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectionController</servlet-name>
        <servlet-class>com.mainservlet.controller.login.SelectionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectionController</servlet-name>
        <url-pattern>/SelectionController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PollsController</servlet-name>
        <servlet-class>com.mainservlet.controller.polls.PollsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PollsController</servlet-name>
        <url-pattern>/PollsController</url-pattern>
    </servlet-mapping>

</web-app>